#:kivy 1.0.9

<MainScreen>:
    BoxLayout:
        Label:
            font_size: 70
            center_x: root.width / 2
            top: root.top - 50
            text: "Chevrolet Matiz"

<BluetoothScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            
            Label:
                text: "device 1"

<UpdateScreen>:
    canvas.before:
        Color:
            rgb: 0.25882352941176473, 0.5294117647058824, 0.9607843137254902
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
    
        Label:
            text: "Updating..."
            font_size: 70